<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">

    <TextView
        android:id="@+id/prevBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&lt;"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/date"/>

    <TextView
        android:id="@+id/date"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Loading..."
        android:gravity="center"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/nextBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&gt;"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/date"/>



    <EditText
        android:id="@+id/checkDigit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/checkDigitBtn"
        app:layout_constraintHorizontal_chainStyle="packed"/>

    <Button
        android:id="@+id/checkDigitBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="입력"
        app:layout_constraintTop_toTopOf="@id/checkDigit"
        app:layout_constraintStart_toEndOf="@id/checkDigit"
        app:layout_constraintEnd_toEndOf="parent"/>



    <EditText
        android:id="@+id/concat"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/checkDigit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/concatBtn"
        app:layout_constraintHorizontal_chainStyle="packed"/>

    <Button
        android:id="@+id/concatBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="입력"
        app:layout_constraintTop_toTopOf="@id/concat"
        app:layout_constraintStart_toEndOf="@id/concat"
        app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
        android:id="@+id/concatText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가나다"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/concat" />

    <TextView
        android:id="@+id/randomText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toBottomOf="@id/concatText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/randomBtn"
        app:layout_constraintHorizontal_chainStyle="packed"/>

    <Button
        android:id="@+id/randomBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="난수 생성"
        app:layout_constraintTop_toTopOf="@id/randomText"
        app:layout_constraintStart_toEndOf="@id/randomText"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/averageInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3과 5와 100의 평균값은 : "
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/randomBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/averageText"
        app:layout_constraintHorizontal_chainStyle="packed"/>

    <TextView
        android:id="@+id/averageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintTop_toTopOf="@id/averageInfo"
        app:layout_constraintStart_toEndOf="@id/averageInfo"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/similarityInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ABC와 ABD의 유사율은? : "
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/averageInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/similarityText"
        app:layout_constraintHorizontal_chainStyle="packed"/>

    <TextView
        android:id="@+id/similarityText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintTop_toTopOf="@id/similarityInfo"
        app:layout_constraintStart_toEndOf="@id/similarityInfo"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/empty1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/similarityInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/empty2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/empty1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/empty3"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/empty2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/emptyBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="체크"
        app:layout_constraintTop_toBottomOf="@id/empty3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>